@model IEnumerable<IOT_UI.Models.UsersViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var digitalServiceId = ViewBag.DigitalServiceId;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Notification User </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = digitalServiceId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = digitalServiceId, userId = item.UserID })
            </td>
        </tr>
}
    </tbody>
</table>
