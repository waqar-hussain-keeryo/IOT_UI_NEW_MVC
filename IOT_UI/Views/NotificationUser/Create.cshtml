@model IOT_UI.Models.DigitalService

@{
    var customerId = ViewBag.CustomerId as Guid?;
}

<h4>DigitalService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DigitalServiceID" />
            <input type="hidden" name="customerId" value="@customerId" />

            <div class="form-group">
                <label asp-for="DigitalServiceID" class="control-label"></label>
                <input asp-for="DigitalServiceID" class="form-control" />
                <span asp-validation-for="DigitalServiceID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NotificationUsers" class="control-label"></label>
                <select asp-for="NotificationUsers" class="form-control" /></<select>
                    @{
                        foreach (var user in Model.NotificationUsers)
                        {
                            <option>user</option>
                        }
                    }
                </select>
                <span asp-validation-for="NotificationUsers" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

