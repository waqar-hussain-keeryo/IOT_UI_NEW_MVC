@model IOT_UI.Models.Device

<h4>Create Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SiteID" />

            <div class="form-group">
                <label class="control-label">Device Name</label>
                <input asp-for="DeviceName" class="form-control" />
                <span asp-validation-for="DeviceName" class="text-danger"></span>
            </div>

            @if (Model.ProductTypeList != null && Model.ProductTypeList.Any())
            {
                <div class="form-group">
                    <label class="control-label">Product Type</label>
                    <select asp-for="ProductType" class="form-control">
                        @foreach (var product in Model.ProductTypeList)
                        {
                            <option value="@product.ProductTypeID">@product.ProductTypeName</option>
                        }
                    </select>
                    <span asp-validation-for="ProductType" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="control-label">Product Type</label>
                    <p class="text-danger">No product types available</p>
                </div>
            }

            <div class="form-group">
                <label class="control-label">Threshold Value</label>
                <input asp-for="ThreSholdValue" class="form-control" />
                <span asp-validation-for="ThreSholdValue" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-siteId="@Model.SiteID">Back to List</a>
</div>
