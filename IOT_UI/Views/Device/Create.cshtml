@model IOT_UI.Models.Device

<h4>Create Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SiteID" />

            <div class="form-group">
                <label asp-for="DeviceName" class="control-label"></label>
                <input asp-for="DeviceName" class="form-control" />
                <span asp-validation-for="DeviceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductType" class="control-label"></label>
                <select asp-for="ProductType" class="form-control">
                    @foreach (var product in Model.ProductTypeList)
                    {
                        <option value="@product.ProductTypeID">@product.ProductTypeName</option>
                    }
                </select>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThreSholdValue" class="control-label"></label>
                <input asp-for="ThreSholdValue" class="form-control" />
                <span asp-validation-for="ThreSholdValue" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-customerId="@Model.SiteID">Back to List</a>
</div>

