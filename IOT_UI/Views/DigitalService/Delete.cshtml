@model IOT_UI.Models.DigitalService

@{
    var customerId = ViewBag.CustomerId as Guid?;
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Delete Digital Service</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceStartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceStartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceEndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceEndDate)
        </dd>
    </dl>
    
    <!-- Hidden field for customerId -->
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="DigitalServiceID" />
        <input type="hidden" name="customerId" value="@customerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-customerId="@customerId">Back to List</a>
    </form>
</div>
