@model IOT_UI.Models.DigitalService

@{
    ViewData["Title"] = "Edit Digital Service";
    var customerId = ViewBag.CustomerId as Guid?;
}

<h4>Update Digital Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DigitalServiceID" />
            <input type="hidden" name="customerId" value="@customerId" />

            <div class="form-group">
                <label class="control-label">Start Date</label>
                <input asp-for="ServiceStartDate" class="form-control" />
                <span asp-validation-for="ServiceStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">End Date</label>
                <input asp-for="ServiceEndDate" class="form-control" />
                <span asp-validation-for="ServiceEndDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> Active
                </label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-customerId="@customerId">Back to List</a>
</div>

