@model IOT_UI.Models.ProductTypeViewModel

<h4>Update Device Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductTypeID" />

            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="ProductTypeName" class="form-control" />
                <span asp-validation-for="ProductTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Minimum Value</label>
                <input asp-for="MinVal" class="form-control" />
                <span asp-validation-for="MinVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Maximum Value</label>
                <input asp-for="MaxVal" class="form-control" />
                <span asp-validation-for="MaxVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Unit Of Measure</label>
                <input asp-for="UOM" class="form-control" />
                <span asp-validation-for="UOM" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> Active
                </label>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

