@model IOT_UI.Models.Site

@{
    var customerId = ViewBag.CustomerId as Guid?;
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Delete Site</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SiteName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SiteName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SiteLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SiteLocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Longitude)
        </dd>
    </dl>

    <!-- Hidden field for customerId -->
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="SiteID" />
        <input type="hidden" name="customerId" value="@customerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-customerId="@customerId">Back to List</a>
    </form>
</div>
